<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperHeroApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.SuperHeroApp.SurfaceStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Theme.SuperHeroApp.BackgroundStyle">
        <item name="android:background">@color/primaryLight</item>
    </style>

    <!-- HeroList -->
    <style name="hero_aliases">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="hero_name">
        <item name="android:textColor">@color/textBody</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <!-- HeroDetails -->

    <style name="hero_details_aliases">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:maxLines">2</item>

    </style>

    <style name="hero_details_name">
        <item name="android:textColor">@color/textBody</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="head_alter_egos">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/alter_egos</item>
    </style>
    <style name="alter_egos_txt">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="head_place_of_birth">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/head_place_of_birth</item>
    </style>

    <style name="head_place_of_birth_txt">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="head_first_appearance">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/head_first_appearance</item>
    </style>

    <style name="first_appearance_txt">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
